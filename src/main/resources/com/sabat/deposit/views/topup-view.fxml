<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="200.0" prefWidth="400.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/22.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.sabat.deposit.controller.TopUpController">
    <children>
        <Label layoutX="30.0" layoutY="30.0" text="Введіть суму для поповнення:" />
        <TextField fx:id="amountField" layoutX="30.0" layoutY="60.0" prefWidth="340.0" />
        <Button fx:id="confirmButton" layoutX="30.0" layoutY="120.0" text="Поповнити" onAction="#onConfirmClick" />

        <!-- Доданий Label для повідомлень про помилки або успіх -->
        <Label fx:id="errorLabel" layoutX="30.0" layoutY="160.0" textFill="red" />
    </children>
</AnchorPane>
