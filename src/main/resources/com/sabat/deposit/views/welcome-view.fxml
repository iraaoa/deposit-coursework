<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="vbox" alignment="CENTER" prefHeight="700.0" prefWidth="1100.0" spacing="20" styleClass="w-root" xmlns="http://javafx.com/javafx/22.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sabat.deposit.controller.WelcomeController">
    <HBox alignment="CENTER" prefHeight="58.0" prefWidth="540.0" styleClass="w-logo-name">
        <children>
            <ImageView fx:id="logoImage" fitHeight="145.0" fitWidth="142.0" styleClass="w-image">
                <HBox.margin>
                    <Insets left="90.0" />
                </HBox.margin>
            </ImageView>
            <Label prefHeight="46.0" prefWidth="257.0" styleClass="w-app-name" text="FUNDLY">
                <HBox.margin>
                    <Insets left="10.0" top="18.0" />
                </HBox.margin>
            </Label>
        </children>
    </HBox>

    <!-- Підзаголовок-пояснення -->
    <Label prefWidth="600.0" styleClass="w-subtitle" text="Effortless savings. Secure deposits. Future-proof your finances with Fundly." wrapText="true" />

    <Button fx:id="startButton" onAction="#onStartClick" prefHeight="54.0" prefWidth="258.0" styleClass="start-button" text="Start investing">
        <VBox.margin>
            <Insets top="30.0" />
        </VBox.margin>
    </Button>
</VBox>
